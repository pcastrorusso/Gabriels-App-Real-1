<%= form_with(model: gabriel) do |form| %>
  <% if gabriel.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(gabriel.errors.count, "error") %> prohibited this gabriel from being saved:</h2>

      <ul>
        <% gabriel.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: "form-control"%>
  </div>

  <div class="field form-group">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: "form-control"%>
  </div>

  <div class="field form-group">
    <%= form.label :emails %>
    <%= form.text_field :emails, class: "form-control", placeholder: "example@email.com" %>
  </div>

  <div class="field form-group">
    <%= form.label :phone %>
    <%= form.text_field :phone, class: "form-control", placeholder: " (XX) 00000-0000 "%>
  </div>

  <div class="field form-group">
    <%= form.label :twitter %>
    <%= form.text_field :twitter, class: "form-control", placeholder: "@example" %>
  </div>
   
   <div class="field form-group">
    <%= form.number_field :user_id, id: :gabriels_user_id, class: "form-control", value: current_user.id, type: :hidden %>
  </div>


<br/>

  <div class="actions">
    <%= form.submit class: "btn btn-dark" %>
  </div>
<% end %>
